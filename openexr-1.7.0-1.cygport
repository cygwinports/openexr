DESCRIPTION="High dynamic-range image format libraries and utilities"
HOMEPAGE="http://www.openexr.com/"
SRC_URI="http://savannah.nongnu.org/download/openexr/${P}.tar.gz"
SRC_DIR="${P%[a-z]}"

PATCH_URI="1.6.1-parallel-make.patch
           1.7.0-gcc43.patch"

PKG_NAMES="${PN} libIlmImf6 libIlmImf-devel"
openexr_CONTENTS='usr/bin/*.exe usr/share/doc/'
libIlmImf6_CONTENTS="usr/bin/cygIlmImf-6.dll"
libIlmImf_devel_CONTENTS='usr/include/ usr/lib/ usr/share/aclocal/'

DIFF_EXCLUDES="OpenEXRConfig.h"

NO_AUTOHEADER=1

src_install() {
	cd ${B}
	cyginstall \
		docdir=/usr/share/doc/${PN} \
		examplesdir=/usr/share/doc/${PN}/examples
}
